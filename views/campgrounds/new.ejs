<% include ../partials/header %>
<h1>Create a new Campground</h1>
<form action="/campgrounds" method="POST">
  <div class="form-group">
    <input class="form-control" type="text" name="campground[name]" placeholder="camp name">
  </div>
    <div class="form-group">
    <input class="form-control" type="text" name="campground[image]" placeholder="camp image url">
  </div>
    <div class="form-group">
    <input class="form-control" type="text" name="campground[description]" placeholder="camp description">
  </div>
    <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
  </div>
</form>
<% include ../partials/footer %>